<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:theme="@style/ForecastLayoutStyle">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include android:id="@+id/layout_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            layout="@layout/layout_forecast_today" />

        <include android:id="@+id/layout_tomorrow"
            layout="@layout/layout_forecast_tomorrow" />

        <include android:id="@+id/layout_causes"
            layout="@layout/layout_forecast_causes" />

        <include android:id="@+id/layout_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            layout="@layout/layout_forecast_grade" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>