<?xml version="1.0" encoding="utf-8"?>
<layout>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_set_location"
            android:layout_centerHorizontal="true"
            layout="@layout/widgetconfig_set_location" />

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_set_location"
            android:id="@+id/layout_update"
            android:layout_centerHorizontal="true"
            layout="@layout/widgetconfig_set_update" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_update"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/button_save"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:contentDescription="@string/missing_img"
                android:src="@drawable/button_save" />

            <ImageView
                android:id="@+id/button_cancel"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:contentDescription="@string/missing_img"
                android:src="@drawable/button_cancel" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>
</layout>