<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/aircondition_layout_padding"
    android:id="@+id/layout_change_pm10">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/missing_img"
            android:src="@drawable/icon_mask"
            android:layout_marginTop="5dp"
            android:id="@+id/imageView12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/air_data_title_pm10"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView12"
            android:textStyle="bold"
            android:textIsSelectable="false"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/border"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:id="@+id/linearLayout3"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/missing_img"
                    android:id="@+id/imageView10"
                    android:src="@drawable/small_best" />

                <SeekBar
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/pm10_seekBar_best"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:indeterminate="false"
                    android:max="50" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text=""
                    android:id="@+id/pm10_textView_best"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/missing_img"
                    android:id="@+id/imageView13"
                    android:src="@drawable/small_good" />

                <SeekBar
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/pm10_seekBar_good"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:indeterminate="false"
                    android:max="50" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text=""
                    android:id="@+id/pm10_textView_good"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/missing_img"
                    android:id="@+id/imageView15"
                    android:src="@drawable/small_bad" />

                <SeekBar
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/pm10_seekBar_bad"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:indeterminate="false"
                    android:max="70" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text=""
                    android:id="@+id/pm10_textView_bad"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change_grade_airkorea_standard"
                    android:id="@+id/pm10_button_air"
                    android:textSize="12sp"
                    android:layout_marginEnd="5dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change_grade_who_standard"
                    android:id="@+id/pm10_button_who"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/change_grade_explain_msg"
                    android:id="@+id/textView19"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/change_grade_explain_msg2"
                    android:id="@+id/textView27"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>


</RelativeLayout>
</layout>