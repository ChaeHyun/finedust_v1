<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/aircondition_layout_padding"
    android:id="@+id/layout_info">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/missing_img"
        android:src="@drawable/yebo"
        android:layout_marginTop="5dp"
        android:id="@+id/icon_one"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/forecast_title_today"
        android:id="@+id/text_title"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/icon_one"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="13dp"
        android:layout_alignParentEnd="true"
        android:text="발표"
        android:textSize="12sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_title"
        android:layout_marginTop="5dp"
        android:padding="20dp"
        android:background="@drawable/border"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/text_content_zero"
            android:textColor="#000000" />
    </LinearLayout>

</RelativeLayout>
</layout>
