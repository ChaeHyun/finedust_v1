<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:id="@+id/layout_set_location">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/missing_img"
            android:src="@drawable/icon_map"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:id="@+id/icon_one"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="지역설정"
            android:id="@+id/text_title_one"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/icon_one"
            android:textStyle="bold"
            android:textIsSelectable="false"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_title_one"
            android:layout_marginTop="5dp"
            android:padding="20dp"
            android:background="@drawable/border">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재위치"
                    android:id="@+id/loc_zero"
                    android:visibility="gone"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loc_one"
                    android:padding="10dp"
                    android:clickable="false"
                    android:checked="false"
                    android:text="-" />

                <RadioButton
                    android:id="@+id/loc_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:clickable="false"
                    android:padding="10dp"
                    android:text="-" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loc_three"
                    android:checked="false"
                    android:clickable="false"
                    android:padding="10dp"
                    android:text="-" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*설정에서 저장위치를 등록 후 사용 할 수 있습니다."
                android:id="@+id/textView13"
                android:layout_marginTop="15dp" />
        </LinearLayout>

</RelativeLayout>
</layout>
