<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="button"
            type="com.finedust.view.ChangeGradeActivity"/>
    </data>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/layout_info"
        android:layout_alignParentEnd="false"
        android:background="@drawable/border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"

            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="190dp"
                android:id="@+id/imageView27"
                android:src="@drawable/grade_table" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notice_for_change_grade"
                android:id="@+id/textView18"
                android:textSize="12sp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notice_for_change_grade1"
                android:id="@+id/textView20"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_info"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            android:id="@+id/button_save"
            android:onClick="@{button::onSaveButtonClick}"
            android:layout_marginEnd="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:id="@+id/button_cancel"
            android:onClick="@{button::onCancelButtonClick}"/>
    </LinearLayout>


</RelativeLayout>
</layout>