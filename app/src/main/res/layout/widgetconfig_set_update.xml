<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/layout_update"
        android:layout_alignParentEnd="false" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/hourglass"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:id="@+id/imageView9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="업데이트주기"
            android:id="@+id/textView10"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView9"
            android:textStyle="bold"
            android:textIsSelectable="false"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/border"
            android:layout_below="@+id/textView10"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="업데이트주기 : "
                android:id="@+id/value_update"
                android:textSize="12dp"
                android:textColor="#000000" />

            <SeekBar
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar_update"
                android:progress="50"
                android:max="6"
                android:padding="10dp"
                android:indeterminate="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위젯의 업데이트 주기를 설정합니다."
                android:id="@+id/textView14"
                android:textSize="12dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_update"
        android:padding="15dp"
        android:id="@+id/layout_transparent" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/eye"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:id="@+id/imageView11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="위젯투명도"
            android:id="@+id/textView15"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView11"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView15"
            android:layout_marginTop="5dp"
            android:padding="20dp"
            android:background="@drawable/border"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="투명도 : "
                android:id="@+id/value_transparent"
                android:textSize="12dp"
                android:textColor="#000000" />

            <SeekBar
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar_transparent"
                android:max="255"
                android:progress="190"
                android:padding="10dp"
                android:indeterminate="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0~255 , 숫자가 높을 수록 배경이 어두워집니다."
                android:id="@+id/textView17"
                android:textSize="12dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
